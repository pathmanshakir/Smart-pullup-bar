<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp">

    <item
        android:bottom="0dp"
        android:right="0dp"
        android:left="0dp"
        android:top="3dp">
